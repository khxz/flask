div.login
form(action="#" method="POST")
  label(for='password') Password
  input#password(type='password', placeholder="Enter your password",  name = "password", required)
  input#login(type='checkbox')
  label.login-button(for='login' type="submit" id="submit" value="Submit")
  {% with messages = get_flashed_messages() %}
              {% if messages %}
                {% for msg in messages %}
                    <p>{{msg}}</p>
                {% endfor %}
              {% endif %}
            {% endwith %}
